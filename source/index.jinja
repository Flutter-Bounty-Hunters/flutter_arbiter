<!doctype html>

<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Flutter Arbiter</title>
    <meta name="description" content="Humble solutions to common Flutter problems.">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="apple-touch-icon" sizes="180x180" href="/images/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon/favicon-16x16.png">
    <link rel="icon" type="image/x-icon" href="/images/favicon/favicon.ico">
    <link rel="manifest" href="/images/favicon/site.webmanifest">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#FF262A2F">

    <!-- Social Media -->
    <meta name="twitter:creator" content="@flutterbounties" />
    <meta property="og:url" content="https://flutterarbiter.com" />
    <meta property="og:title" content="Flutter Arbiter" />
    <meta property="og:description" content="Humble solutions to common Flutter problems." />
    <meta property="og:image" content="http://flutterarbiter.com/images/branding/flutter-arbiter_logo-preview.png" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="/styles/homepage.css">

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;400;500;600;700&family=Junge&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

    <!-- Material Icons -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

    {{ components.google_analytics() }}
  </head>

  <body>
    <section id="header">
      <div class="branding">
        <img src="images/branding/logo_3d.png" class="logo">
        <span class="title">FLUTTER ARBITER</span>
        <div class="divider">&nbsp;</div>
        <p class="description">Humble solutions to common<br>Flutter problems.</p>
      </div>

      <span class="material-symbols-outlined">expand_more</span>
    </section>
    <div class="section-divider">&nbsp;</div>
    <main>
      <div id="catalog">
        {% if pages.byTag("operations")|length > 0 %}
        <h2>Operations</h2>
        <hr>
        <ul class="article-list">
          {% for page in pages.byTag("operations", sortBy="groupOrder") %}
          <li>
            <div class="article-title">{{ page.data["title"] }}</div>
            <div class="article-description">{{ md(page.data["synopsis"]) }}&nbsp;&nbsp;&nbsp;<a href="{{ page.data["url"] }}">Learn More...</a></div>
          </li>
          {% endfor %}
        </ul>
        {% endif %}

        {% if pages.byTag("patterns")|length > 0 %}
        <h2>Patterns</h2>
        <hr>
        <ul class="article-list">
        {% for page in pages.byTag("patterns", sortBy="groupOrder") %}
          <li>
            <div class="article-title">{{ page.data["title"] }}</div>
            <div class="article-description">{{ md(page.data["synopsis"]) }}&nbsp;&nbsp;&nbsp;<a href="{{ page.data["url"] }}">Learn More...</a></div>
          </li>
        {% endfor %}
        </ul>
        {% endif %}

        {% if pages.byTag("strategies")|length > 0 %}
        <h2>Strategies</h2>
        <hr>
        <ul class="article-list">
          {% for page in pages.byTag("strategies") %}
          <li>
            <div class="article-title">{{ page.data["title"] }}</div>
            <div class="article-description">{{ md(page.data["synopsis"]) }}&nbsp;&nbsp;&nbsp;<a href="{{ page.data["url"] }}">Learn More...</a></div>
          </li>
          {% endfor %}
        </ul>
        {% endif %}

        {% if pages.byTag("testing")|length > 0 %}
        <h2>Testing</h2>
        <hr>
        <ul class="article-list">
          {% for page in pages.byTag("testing") %}
          <li>
            <div class="article-title">{{ page.data["title"] }}</div>
            <div class="article-description">{{ md(page.data["synopsis"]) }}&nbsp;&nbsp;&nbsp;<a href="{{ page.data["url"] }}">Learn More...</a></div>
          </li>
          {% endfor %}
        </ul>
        {% endif %}
      </div>
    </main>

    {{ components.footer() }}
  </body>
</html>